<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityNgo"
    android:orientation="vertical"
    android:background="@color/background">
    <TextView
        android:id="@+id/ngoname"
        android:textSize="40dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".4"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvngomain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ngoemailid"
            android:textSize="20dp"
            android:fontFamily="@font/playfair"
            android:paddingLeft="5dp"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ngotype"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:fontFamily="@font/playfair"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ngocity"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:fontFamily="@font/playfair"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ngocause"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:fontFamily="@font/playfair"
            android:paddingLeft="5dp"
            android:paddingBottom="2dp"
            android:layout_height="wrap_content" />
        <Button

            android:id="@+id/btnngodonate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#f9d1eb"
            android:minHeight="30dp"
            android:minWidth="120dp"
            android:layout_margin="5dp"
            />
        <Button
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="visit"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#f9d1eb"
            android:minHeight="30dp"
            android:minWidth="120dp"
            android:id="@+id/btnvisit"/>
    </LinearLayout>
    >
</LinearLayout>