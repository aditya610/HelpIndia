
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Login.Loginngo"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information  "
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="17dp"
                android:padding="5dp"/>
            <Button

                android:background="@drawable/rounded"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:text="edit info"
                android:textSize="10dp"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:id="@+id/tvsignname"
                    android:layout_width="0dp"
                    android:layout_weight=".25"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="17dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:padding="5dp"
                    android:id="@+id/tvloginname"
                    android:layout_width="0dp"
                    android:layout_weight=".75"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"

                    android:textSize="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="5dp"
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_weight=".30"
                    android:textColor="#000000"

                    android:textSize="17dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Email id:" />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/tvloginid"
                    android:layout_width="0dp"
                    android:layout_weight=".70"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="16dp"/>
            </LinearLayout>

            <TextView
                android:padding="5dp"
                android:id="@+id/textView5"
                android:layout_width="match_parent"

                android:textSize="17dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Organization:" />

            <TextView
                android:padding="5dp"

                android:id="@+id/tvloginngo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingLeft="10dp"
                android:textSize="16dp"/>
            <TextView
                android:padding="5dp"
                android:id="@+id/textView6"
                android:layout_width="match_parent"

                android:textSize="17dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="City" />

            <TextView
                android:padding="5dp"
                android:id="@+id/tvlogincity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"

                android:paddingLeft="10dp"
                android:textSize="16dp"/>



            <TextView
                android:padding="5dp"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textColor="#000000"

                android:textSize="17dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp" />

            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="16dp"

                android:paddingLeft="10dp"

                android:id="@+id/tvlogintype"/>


            <TextView
                android:padding="5dp"
                android:id="@+id/textView8"
                android:layout_width="match_parent"

                android:textSize="17dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="CAUSE" />

            <TextView
                android:padding="5dp"
                android:id="@+id/tvlogincause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"

                android:paddingLeft="10dp"
                android:textSize="16dp"
                 />
            <FrameLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <Button
                    android:background="@drawable/rounded"
                    android:backgroundTint="#ffb2f3"
                    android:id="@+id/btneventadd"
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Add event" />
            <Button
                android:id="@+id/btnsignin"
                android:layout_width="wrap_content"
                android:layout_gravity="right"

                android:background="@drawable/rounded"
                android:backgroundTint="#ffb2f3"
                android:layout_height="wrap_content"
                android:text="Logout" />
            <Button

                android:background="@drawable/rounded"
                android:backgroundTint="#ffb2f3"
                android:id="@+id/btnbd"
                android:layout_width="wrap_content"
                android:layout_gravity="center"


                android:layout_height="wrap_content"
                android:text="ADD BLOOD donaton" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>