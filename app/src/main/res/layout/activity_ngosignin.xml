
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"

        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".signin.NGOsignin"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/tvsignname"
                    android:layout_width="0dp"
                    android:layout_weight=".25"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/etsignname"
                    android:layout_width="0dp"
                    android:layout_weight=".75"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="your name"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_weight=".30"
                    android:textSize="17dp"

                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Email id:" />

                <EditText
                    android:id="@+id/etsignemailid"
                    android:layout_width="0dp"
                    android:layout_weight=".70"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="16dp"
                    android:hint="email"
                    android:inputType="textEmailAddress" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:textSize="17dp"

                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Enter Passcode" />

            <EditText
                android:id="@+id/etsignpasscode"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:hint="enter passcode"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />



            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"

                android:textSize="17dp"

                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Organization" />

            <EditText
                android:id="@+id/etsignngo"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="organization name"

                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:textSize="17dp"

                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:text="City" />

            <EditText
                android:id="@+id/etsigncity"

                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="city name"
               />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select one"
                android:textSize="17dp"

                android:paddingTop="5dp"
                android:paddingLeft="10dp" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton

                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="NGO"
                    android:id="@+id/rbngo"/>
                <RadioButton

                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:text="ADOPTION"
                    android:id="@+id/rbadop"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textSize="17dp"

                android:paddingTop="5dp"
                android:paddingLeft="10dp"/>

            <EditText

                android:layout_width="match_parent"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="in case of adoption: for pets, for kids(which age group)                                                                                                            in case of ngo:old age home,for education,home for orphans "
                android:inputType="textMultiLine"
                android:id="@+id/ettype"/>


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:textSize="17dp"

                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:text="CAUSE" />

            <EditText
                android:id="@+id/etsigncause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"

                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:hint="why one should join or donate in your ngo (required ony in case of ngo)"
                android:inputType="textMultiLine" />
            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:textSize="17dp"

                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Enter the url to your website" />

            <EditText
                android:id="@+id/etsignurl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:ems="10"
                android:hint="https://www.google.com/chrome/?brand=CHBFds_kid=43700013064699999gclid=CInbxfa8kd0CFRL4jgod0QYL6ggclsrc=dsdclid=CIa-2_a8kd0CFRBzjgodHbkISA"
                android:inputType="textMultiLine" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Photos"
                android:background="@drawable/rounded"
                android:backgroundTint="#edbbec"
                android:id="@+id/btnaddphotos"/>
            <Button
                android:id="@+id/btnsignin"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"

                android:background="@drawable/rounded"
                android:backgroundTint="#edbbec"
                android:minWidth="100dp"
                android:layout_height="wrap_content"
                android:text="sign in" />

        </LinearLayout>
    </ScrollView>

